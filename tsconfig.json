{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
